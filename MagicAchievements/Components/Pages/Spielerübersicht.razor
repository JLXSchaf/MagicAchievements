@using Components.Models;
@page "/Spielerübersicht"
@attribute [StreamRendering]


<h3>Spielerübersicht</h3>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    // Copy here for Entries in txt. Verzweifel nicht :)
    //<th aria-label="Temperature in Celsius">Temp. (C)</th>
    <table class="table">
        <thead>
            <tr>
                <th>Spieler</th>
                <th>Erstellt am</th>
                <th>Achievements</th>
                <th>Achievementspunkte</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.CreatedOn</td>
                    <td>@user.Achievements</td>
                    <td>@user.Achievementpoints</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private User[]? users;
}
